# For Kpop
files = ["black pink kpop merch.csv", "blackpink kpop merch.csv", "blackpink merch.csv", "black pink merch for girls.csv","blackpink merch for girls.csv","Kpop merch.csv"]
asins_to_search = [
    "B0DG2F4TW2", "B0DRS9HPS2", "B0DRSC1991", "B0DRVN7ZBR", "B0DS9HFWMS"
]



output_filename = "asin_ranks_output.csv"
ranks_df = get_asin_ranks(asins_to_search, files, output_filename)
print(ranks_df)
